<IfModule mod_rewrite.c>
    #Activar el rewrite  
    RewriteEngine on
    ErrorDocument 404 http://localhost/master_php/proyectosPHP/proyecto2/error/index

    RewriCond %{SCRIPT_FILENAME} !-d
    RewriCond %{SCRIPT_FILENAME} !-f
    
    RewriteRule ^(.*)/(.*) in index.php?controller=$1&action=$2

 
</IfModule>